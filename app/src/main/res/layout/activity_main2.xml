<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainActivity2.MainActivity2"
    android:orientation="vertical">


    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/space"
        android:layout_alignParentStart="true"
        android:layout_margin="15dp"
        android:text="ACTIVITY 1"
        android:onClick="onClickStartAnotherActivity"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/space"
        android:layout_margin="15dp"
        android:text="ACTIVITY 3"
        android:onClick="onClickStartAnotherActivity"/>

    <Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/value_count"
        android:textSize="100sp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"/>

    <Button
        android:id="@+id/increment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/increment"
        android:onClick="onClickIncrementButton"
        android:layout_centerInParent="true"
        android:layout_below="@+id/count"/>

</RelativeLayout>